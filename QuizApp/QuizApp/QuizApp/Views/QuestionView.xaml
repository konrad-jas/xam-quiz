<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizApp.Views.QuestionView">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="50"></RowDefinition>
		</Grid.RowDefinitions>
		<Label Text="{Binding Question}" Margin="10, 10"/>
		<ListView ItemsSource="{Binding Answears}" Grid.Row="1">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextCell Text="{Binding Answear}"
							Command="{Binding SelectedCommand}"
							CommandParameter="{Binding }"
							TextColor="Black">
					</TextCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
		<Button Grid.Row="2" Text="Select answer" Command="{Binding ConfirmAnswearCommand}"/>
	</Grid>
</ContentPage>